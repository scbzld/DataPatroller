/* data-charts/data-charts.wxss */
.dc-container {
  width: 100%;
  height: 100%;
  font-size: 30rpx;
  color: #333;
  font-family: "Helvetica","Arial","Helvetica Neue","Droid Sans","Microsoft YaHei","sans-serif";
}

.title-container {
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  display: flex;
  flex-direction: column;
}

.title-container .main-title {
  font-size: 30rpx;
  color: #333;
  padding-left: 15rpx;
}

.title-container .sub-title {
  font-size: 21rpx;
  color: #666666;
  padding-left: 15rpx;
}

.title-container .extra-desc {
  width: 95%;
  margin-top: 5rpx;
  text-align: right;
}

.title-container .extra-desc .extra-desc-main {
  font-size: 21rpx;
  color: #333;
}

.title-container .extra-desc .extra-desc-value {
  font-size: 30rpx;
  color: #333;
}

.title-container .extra-desc .extra-desc-change {
  font-size: 21rpx;
  color: #13C77F;
}

.chart-container {
  width: 100%;
  height: 300rpx;
  font-size: 21rpx;
}
