/* pages/forbidden/forbidden.wxss */

.forbidden-main {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.forbidden-item {
  margin-top: 50%;
  flex-grow: 1;
}

.forbidden-item-view {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.forbidden-item image {
  width: 200rpx;
  height: 200rpx;
}

.forbidden-item text {
  font-size: 30rpx;
  font-weight: bold;
  white-space: pre;
}

.forbidden-item #text {
  font-size: 45rpx;
  font-weight: bold;
  color: red; 
}